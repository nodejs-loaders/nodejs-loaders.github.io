  },
  "devDependencies": {
    "@biomejs/biome": "~1.9.4",
    "@types/node": "~22.10.5",
    "@types/react": "~19.0.2",
    "@types/react-dom": "~19.0.2",
    "autoprefixer": "~10.4.20",
    "geist": "~1.3.1",
    "postcss": "~8.4.49",
    "serve": "~14.2.4",
    "tailwindcss": "~3.4.17",
    "typescript": "~5.7.2"
