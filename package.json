{
  "name": "@nodejs-loaders/nodejs-loaders.github.io",
  "description": "A showcase website for the `nodejs-loader` project",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "biome:format:fix": "biome format --fix ./",
